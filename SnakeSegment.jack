

class SnakeSegment {

	field int x;
	field int y;

	/** Constructs a new Snake Segment Object */
	constructor SnakeSegment new(int xVal, int yVal) {

		let x = xVal;
		let y = yVal;

		return this;
	}

	method int getX() {
		return x;
	}

	method int getY() {
		return y;
	}

	method void setXY(int xVal, int yVal) {
		let x = xVal;
		let y = yVal;
		return;
	}

	// Draw Segment to Screen
	method void draw() {
		do Main.drawSnakeAt(x,y);
		return;
	}
	


}